@page
@model Jotte.Pages.Jottes.EditModel

@{
    ViewData["Title"] = "Edit Entries";
}

<br />
<br />
<br />
<h4>Edit Study Entry</h4>
<hr />
<br />  
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Sjotte.Id" />
            <div class="form-group">
                <label asp-for="Sjotte.Date" class="control-label"></label>
                <input asp-for="Sjotte.Date" class="form-control" />
                <span asp-validation-for="Sjotte.Date" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <label asp-for="Sjotte.Scripture" class="control-label"></label>
                <input asp-for="Sjotte.Scripture" class="form-control" />
                <span asp-validation-for="Sjotte.Scripture" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <label asp-for="Sjotte.Note" class="control-label"></label>
                <input asp-for="Sjotte.Note" class="form-control" />
                <span asp-validation-for="Sjotte.Note" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
